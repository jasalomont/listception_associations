<div class="page-header">
  <h3>Board #<%= @board.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Title</dt>
      <dd><%= @board.title %></dd>

      <dt>Description</dt>
      <dd><%= @board.description %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/boards" class="btn btn-default">
        Back
      </a>
      <a href="/boards/<%= @board.id %>/edit" class="btn btn-default">
        Edit
      </a>
      <a href="/delete_board/<%= @board.id %>" class="btn btn-default" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
<div class="col-md-10 col-md-offset-1 mb-2">


  <div class="panel panel-default">
    <% @board.lists.each do |list| %>
    <div class="panel-body">
      <h2><%=  list.title  %></h2>
      <% @board.cards.each do |card| %>
      <div class="col-md-8 col-md-offset-2 mb-2">
        <div class="row">
          <div class="panel panel-default">
            <div class="panel-heading">
              <a href="/cards/<%= card.id %>"> <%=  card.title %> </a>
            </div>
            <div class="panel-body">
              <%= card.description %>
            </div>

          </div>
        </div>

      </div>
      <%end %>
    </div>
    <%end %>
  </div>
</div>
